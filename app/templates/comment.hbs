<div class="panel panel-default">
	<div class="panel-heading">
		<span class="label label-default">{{memberCreator.initials}}</span> <span class="pull-right">{{human-date date}}</span>
	</div>

	<div class="panel-body">
		{{#if isEditing}}
			<form>
				<div class="form-group">
					{{textarea value=data.text class="form-control" rows="4"}}
				</div>
			</form>
		{{else}}
			{{trello-formatter data.text}}
		{{/if}}
	</div>

	<div class="panel-footer text-right">
		{{#if isEditing}}
			<a {{action "cancelEdit"}} class="btn btn-xs"><i class="fa fa-undo"> Cancel</i></a>
			<a {{action "saveEdit"}} class="btn btn-xs"><i class="fa fa-save"> Save</i></a>
		{{else}}
			<a {{action "startEdit"}} class="btn btn-xs"><i class="fa fa-pencil"> Edit</i></a>
			<a {{action "deleteComment" this}} class="btn btn-xs"><i class="fa fa-trash-o"> Delete</i></a>
		{{/if}}
	</div>
</div>
